<%= link_to new_project_path, class: 'button button-wide accent4' do %>
  New Project
<% end %>

<br>

<div class="link-list">
  <% @projects.each do |project| %>
    <%= link_to project_path(project), class: "item-#{project.status}" do %>
      <%= complete_icon_for(project) %>
      <%= project.name %>
      <%= due_date_badge(project.due_date) %>
    <% end %>
  <% end %>
</div>
