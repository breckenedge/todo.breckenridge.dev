<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :name, autofocus: true %>
  <%= f.input :due_date, as: :date, html5: true %>
  <%= f.input :details %>
  <%= f.input :estimates_enabled, label: 'Enable estimates?' %>
  <%= f.input :status, as: :boolean, label: "Complete?", checked_value: "complete", unchecked_value: "incomplete" %>

  <div class="two-column">
    <%= f.button :submit, class: 'button accent5' %>
    <% unless @project.new_record? %>
      <%= link_to 'Delete Project', project_path(@project), class: 'button accent0', data: { method: :delete, confirm: 'Are you sure?' } %>
    <% end %>
  </div>
<% end %>
