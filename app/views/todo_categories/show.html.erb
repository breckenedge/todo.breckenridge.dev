<div class="two-column">
  <div>
    <h1><%= @todo_category.name %></h1>
  </div>
  <div>
    <%= link_to 'Edit', edit_todo_category_path(@todo_category), class: 'button' %>
  </div>
</div>

<div class="two-column">
  <div>
    <h2>Todos</h2>
  </div>
  <div>
    <%= link_to 'New Todo', new_todo_path(todo_category_id: @todo_category.id), class: 'button' %>
  </div>
</div>

<%= render 'todos_list', todos: @todo_category.todos %>
