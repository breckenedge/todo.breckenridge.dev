<%= simple_form_for(@estimate) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.association :project %>
  <%= f.input :vendor %>
  <%= f.input :date, html5: true %>
  <%= f.input :estimate %>
  <%= f.input :contact %>
  <%= f.input :phone %>
  <%= f.input :details %>

  <%= f.button :submit, 'Save', class: 'button button-wide accent5' %>
<% end %>

<hr>

<% unless @estimate.new_record? %>
  <%= button_to 'Delete Estimate', estimate_path(@estimate), class: 'button button-wide accent0', method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
