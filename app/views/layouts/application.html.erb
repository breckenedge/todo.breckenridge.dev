<!DOCTYPE html>
<html>
  <head>
    <title>Todo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <nav class="nav" style="background-color: #eee">
      <%= link_to 'Todos', todos_path, class: 'nav-link' %>
      <%= link_to 'Categories', todo_categories_path, class: 'nav-link' %>
    </nav>

    <br>

    <div class="container-fluid">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <%= yield %>

      <% if current_user %>
        <small>Logged in as <%= current_user.email %>. <%= link_to 'Log out', log_out_path, method: :delete %></small>
      <% end %>
    </div>
  </body>
</html>
