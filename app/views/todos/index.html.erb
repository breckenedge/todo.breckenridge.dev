    </div>
  </div>
<% end %>

<br>

<%= link_to 'New Todo', new_todo_path(todo_category_id: params[:todo_category_id]), class: 'btn btn-primary btn-block' %>

<br>

<% @todos.each do |todo| %>
  <%= link_to todo_path(todo), class: 'todo' do %>
    <%= todo.complete? ? 'âœ…' : '' %>
    <%= todo.name %>
    <%= todo_priority(todo) %>
