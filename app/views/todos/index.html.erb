<%= form_tag todos_path, class: 'form form-inline', method: :get do %>
  <div style="display: flex">
    <div style="flex-grow: 1">
      <%= text_field_tag :q, params[:q], autofocus: true, placeholder: 'Search' %>
    </div>

    <div>
