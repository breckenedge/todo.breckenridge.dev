<%= simple_form_for(todo) do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.input :project_id, collection: Project.pluck(:name, :id) %>

  <%= form.input :name, autofocus: true %>

  <%= form.input :status, as: :boolean, label: 'Complete?', checked_value: 'complete', unchecked_value: 'incomplete' %>

  <%= form.input :due_on, html5: true %>

  <%= form.input :priority %>

  <%= form.input :todo_category_ids, as: :select, collection: TodoCategory.order(:name).pluck(:name, :id), input_html: { multiple: true, size: TodoCategory.count }, label: 'Categories' %>

  <%= form.input :description, rows: 3 %>

  <div style="display: flex">
    <div style="flex-grow: 1">
      <%= form.submit class: 'button' %>
    </div>
    <div>
      <%= link_to('Show', todo_path(form.object), class: 'button') unless todo.new_record? %>
      <%= link_to 'Back', todos_path, class: 'button' %>
    </div>
  </div>
<% end %>
