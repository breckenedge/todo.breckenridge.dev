<%= simple_form_for(todo) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :name %>
  <%= f.input :due_on, as: :string, input_html: { class: 'datepicker' } %>
  <%= f.input :project_id, collection: Project.order(:name, :status).pluck(:name, :id) %>
  <%= f.input :description, rows: 3 %>
  <%= f.input :status, as: :boolean, label: "Complete?", checked_value: "complete", unchecked_value: "incomplete" %>

  <%= f.submit 'Save', class: 'button button-wide accent5' %>
<% end %>

<hr>

<% unless @todo.new_record? %>
  <%= button_to 'Delete Todo', todo_path(@todo), class: 'button button-wide accent0', method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
