<div class="link-list">
  <% todos.each do |todo| %>
    <%= link_to todo_path(todo), class: 'todo' do %>
      <%= complete_icon if todo.complete? %>
      <%= todo.name %>
      <%= todo_priority(todo) %>
      <% todo.todo_categories.each do |category| %>
        <%= content_tag :span, category.name, class: 'badge' %>
      <% end %>
    <% end %>
  <% end %>
</div>
